---
import Navigation from "./Navigation.astro";
import { Icon } from "astro-icon";
---

<header
  class="flex flex-shrink-0 h-16 w-full items-center justify-between border-b border-slate-800 bg-gray-800 px-10"
>
  <nav class="flex items-center justify-between w-full">
    <h1 class="text-2xl font-logo"><a href="/">Ingo Krumbein</a></h1>
    <div class="hidden sm:block">
      <Navigation />
    </div>
    <Icon
      name="fa-solid:bars"
      class="block sm:hidden cursor-pointer"
      id="mobileNavButtonOpen"
      size={28}
    />
    <Icon
      name="fa-solid:times"
      class="hidden cursor-pointer"
      id="mobileNavButtonClose"
      size={28}
    />
  </nav>
</header>
<div
  class="hidden w-full flex-col items-center gap-4 py-10 bg-gray-800"
  id="mobileNav"
>
  <Navigation />
</div>

<script>
  const mobileNavButtonOpen = document.querySelector("#mobileNavButtonOpen");
  const mobileNavButtonClose = document.querySelector("#mobileNavButtonClose");
  const mobileNav = document.querySelector("#mobileNav");

  mobileNavButtonOpen?.addEventListener("click", () => {
    mobileNavButtonOpen?.classList.remove("block");
    mobileNavButtonOpen?.classList.remove("sm:hidden");
    mobileNavButtonClose?.classList.remove("hidden");
    mobileNav?.classList.remove("hidden");

    mobileNavButtonOpen?.classList.add("hidden");
    mobileNavButtonClose?.classList.add("block");
    mobileNavButtonClose?.classList.add("sm:hidden");
    mobileNav?.classList.add("flex");
    mobileNav?.classList.add("sm:hidden");
  });

  mobileNavButtonClose?.addEventListener("click", () => {
    mobileNavButtonClose?.classList.remove("block");
    mobileNavButtonClose?.classList.remove("sm:hidden");
    mobileNavButtonOpen?.classList.remove("hidden");
    mobileNav?.classList.remove("flex");
    mobileNav?.classList.remove("sm:hidden");

    mobileNavButtonClose?.classList.add("hidden");
    mobileNavButtonOpen?.classList.add("block");
    mobileNavButtonOpen?.classList.add("sm:hidden");
    mobileNav?.classList.add("hidden");
  });
</script>
