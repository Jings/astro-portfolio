---
import Header from "../components/Header.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://fonts.googleapis.com/css2?family=Azeret+Mono&family=Handlee&display=swap"
      rel="stylesheet"
    />
    <meta
      name="twitter:image:src"
      content="https://ingo-krumbein.de/assets/hero-6ce591fa.jpg"
    />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content="Happy husband - Proud dad - Passionate dev"
    />
    <meta
      property="og:image"
      content="https://ingo-krumbein.de/assets/hero-6ce591fa.jpg"
    />
    <meta
      property="og:image:alt"
      content="Ingo Krumbein - Happy husband - Proud dad - Passionate dev"
    />
    <meta property="og:image:width" content="777" />
    <meta property="og:image:height" content="923" />
    <meta property="og:site_name" content="Ingo Krumbein" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:url" content="https://ingo-krumbein.de" />
    <meta property="og:locale" content="de_DE" />
    <meta
      property="og:description"
      content="Happy husband - Proud dad - Passionate dev"
    />
    <title>{title}</title>
  </head>
  <body
    class="flex flex-col min-w-screen min-h-screen h-screen w-screen font-azeret bg-gray-900 text-slate-100 overflow-x-hidden"
  >
    <Header />
    <div class="flex flex-1 flex-shrink-0">
      <slot />
    </div>
  </body>
</html>
